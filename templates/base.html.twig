<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block title %}
        <title>Blog La Piscine</title>
    {% endblock %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('assets/style/css/style.css') }}">

</head>
<body class="js-body">

<header class="header-top">
    <form method="GET" action="{{ path('admin_search_articles') }}">
        <input type="text" name="search">
        <input type="submit">
    </form>
    <ul class="nav-items">
        <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Accueil</a></li>
    </ul>
    <button class="js-night-toggle">Night Mode</button>
</header>

{% for message in app.flashes('success') %}
    <p class="message-success">{{ message }}</p>
{% endfor %}

{% for message in app.flashes('error') %}
    <p class="message-error">{{ message }}</p>
{% endfor %}

<main>

    {% block main %}
        <img src="https://static.actu.fr/uploads/2018/11/Chrsitine-Boutin-960x640.jpg" alt="">
    {% endblock %}

</main>

<footer>
    <p>Je suis le footer, je fais du foot</p>
</footer>
<script src="{{ asset('assets/js/main.js') }}"></script>
</body>
</html>

