{% block main %}
    <section class="articles">
        {% for article in lastArticles %}

            {% if article.isPublished %}
                <article class="box-article article">
                    <h1>{{ article.title }}</h1>
                    <a href="{{ path('admin_article', {'id': article.id }) }}">Clique j't'ai dit</a>
                </article>
            {% endif %}

        {% endfor %}
    </section>
{% endblock %}
